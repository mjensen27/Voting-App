<% include partials/header %>
<% include partials/dashboard %>

<h1 class="text-center">New Poll</h1>
<div class="container text-center" style="width: 30%; margin: 30px auto;">
    <form action="/polls" method="post">
        <div class="form-group">
            <label for="name">Name your poll</label>
            <br>
            <input type="text" class="form-control" name="name" placeholder="What is your favorite brand?">
        </div>
        <div class="form-group">
            <label for="options">Options</label>
            <br>
            <input type="text" class="form-control" name="options" placeholder="Coke">
            <input type="text" class="form-control" name="options" placeholder="Pepsi">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-lg btn-outline-secondary">More Options</button>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-lg btn-success btn-block">Submit</button>
        </div>
    </form>
</div>

